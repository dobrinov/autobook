= render partial: 'cars/header', locals: { cars: @cars, active_tab: @car.id }

br

.row
  .col-sm-12
    = link_to new_car_history_path, class: 'btn btn-default' do
      = fa_icon 'chevron-left'
      | &nbsp; &nbsp;
      | Назад

br

.row
  .col-sm-9
    .row
      .col-xs-12
        .panel.panel-default
          .panel-heading
            strong Добавяне на тунинг
          .panel-body
            = bootstrap_form_for [@car, @history] do |f|
              = f.date_select :happened_at, { order: [:day, :month, :year], start_year: 1900, end_year: Date.today.year }, { class: 'form-control date-select' }
              = f.text_field :cost, class: 'form-control', placeholder: 'Стойност на подобренията (лв.)'
              = f.number_field :mileage, class: 'form-control', placeholder: 'Пробег (км.)'
              = f.text_area :details, class: 'form-control wysihtml5', rows: 5, placeholder: 'Подробна информация за извършените подобрения.'

              .form-group
                = f.submit 'Добави тунинг', class: 'btn btn-primary'
                | &nbsp;
                = link_to 'Отказ', back_or_default, class: 'btn btn-default'

  .col-sm-3
    = render partial: 'side_panel'
