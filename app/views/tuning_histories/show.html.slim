= render partial: 'cars/header', locals: { cars: @cars, active_tab: @car.id }

br

.row
  .col-sm-12
    = link_to back_or_default, class: 'btn btn-default' do
      = fa_icon 'chevron-left'
      | &nbsp; &nbsp;
      | Назад

br

.row
  .col-sm-9
    .panel.panel-default
      .panel-heading
        strong Тунинг

      table.table.table-bordered
        tr
          th Дата на събитие
          td = @history.happened_at.strftime("%d.%m.%Y")
        tr
          th Дата на въвеждане
          td = @history.created_at.strftime("%d.%m.%Y")
        tr
          th Стойност
          td = number_to_currency(@history.cost, locale: I18n.locale)
        tr
          th Пробег
          td = number_with_delimiter(@history.mileage, delimiter: ',') + " км."
        tr
          th Детайли
          td
            - if @history.details.present?
              = @history.details.html_safe

  .col-sm-3
    .panel.panel-default
      .panel-heading
        strong Действия

      .panel-body
        = link_to 'Редактирай', '#', class: 'btn btn-block btn-primary'
        = link_to 'Изтрий', '#', class: 'btn btn-block btn-danger', data: {:confirm => "Сигурни ли сте?"}, :method => :delete
