.panel.panel-default
  .panel-heading
    strong Информация за кола

  .panel-body
    strong Регистрационен номер
    p = car.plate

    - if @car.vin.present?
      strong Номер на шаси
      p = car.vin

    - if @car.engine_number.present?
      strong Номер на двигател
      p = car.engine_number

    strong Разходи
    p = number_to_currency(car.total_spent, locale: I18n.locale)

.panel.panel-default
  .panel-heading
    strong Действия

  .panel-body
    = link_to 'Изтрий кола', car_path(@car), class: 'btn btn-block btn-danger', data: {:confirm => "Сигурни ли сте че искате да изтриете колата с регистрация #{@car.plate}?"}, :method => :delete